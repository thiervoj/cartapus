{
  "name": "cartapus",
  "version": "1.2.2",
  "description": "âœ¨ Animate DOM elements as they appear in your window. A small `IntersectionObserver` wrapper and helper.",
  "author": "Jordan Thiervoz",
  "license": "MIT",
  "keywords": [
    "intersectionobserver",
    "animations",
    "scroll",
    "viewport"
  ],
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "source": "src/cartapus.js",
  "main": "dist/cartapus.js",
  "umd:main": "dist/cartapus.js",
  "module": "build/cartapus.mjs",
  "exports": {
    "require": "./dist/cartapus.js",
    "default": "./dist/cartapus.modern.mjs"
  },
  "scripts": {
    "dev": "npm-run-all --parallel dev:bundle dev:website",
    "dev:bundle": "microbundle watch -i src/cartapus.js --format esm --compress --no-sourcemap --no-pkg-main --external none --output ./bundled --name 'Cartapus'",
    "dev:website": "npm run dev:website --prefix ./website",
    "clean": "rimraf dist && rimraf bundled",
    "build": "npm run clean && microbundle --external none && microbundle build -i src/cartapus.js --format umd --compress --no-sourcemap --no-pkg-main --external none --output ./dist --name 'Cartapus' && npm run build:website",
    "build:website": "microbundle -i src/cartapus.js --format esm --compress --no-sourcemap --no-pkg-main --external none --output ./bundled --name 'Cartapus' && npm run build:website --prefix ./website",
    "lint": "eslint src & npm run lint --prefix ./website"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thiervoj/cartapus.git"
  },
  "bugs": {
    "url": "https://github.com/thiervoj/cartapus/issues"
  },
  "homepage": "https://github.com/thiervoj/cartapus#readme",
  "devDependencies": {
    "eslint": "^8.33.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "microbundle": "^0.15.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^4.1.2"
  },
  "dependencies": {
    "tiny-emitter": "^2.1.0"
  }
}
